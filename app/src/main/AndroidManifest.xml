<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.customers">

    <application
        android:name=".db.CustomerApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Customers">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.addcustomer.AddCustomerActivity"/>
        <activity android:name=".ui.addpayment.AddPaymentActivity"/>
        <activity android:name=".ui.customer.CustomersActivity"/>
        <activity android:name=".ui.payments.PaymentsActivity"/>
        <activity android:name=".ui.addcustomer.UpdateCustomerActivity"/>
    </application>

</manifest>